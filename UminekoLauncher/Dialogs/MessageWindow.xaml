<Window x:Class="UminekoLauncher.Dialogs.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UminekoLauncher"
        mc:Ignorable="d"
        AllowsTransparency="True" Background="Transparent"
        Window.SizeToContent="Height" Width="350" WindowStyle="None" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" ShowInTaskbar="False" Topmost="True">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border Grid.RowSpan="2" CornerRadius="5" Background="#D8000000"/>
        <StackPanel Margin="30">
            <TextBlock x:Name="textMessage" Style="{StaticResource ButtonText}" Text="Message" FontSize="18" FontWeight="Bold" TextWrapping="Wrap"/>
        </StackPanel>
        <Button x:Name="btnConfirm" Content="确认" Click="btnConfirm_Click" Grid.Row="1" Margin="30,0,30,30" Padding="15,0,0,0" HorizontalContentAlignment="Left" IsCancel="True" IsDefault="True"/>
    </Grid>
</Window>